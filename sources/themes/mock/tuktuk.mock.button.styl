.button, button
  font-weight: 700 !important
  -webkit-font-smoothing: antialiased
  border-radius: BORDER-RADIUS
  &:not(.transparent):not(:disabled)
    color: #fff !important
    background-color: BUTTON
    box-shadow: inset 0 -1px rgba(0,0,0,0.1)
    &:hover
      box-shadow: inset 0 0 5em rgba(0,0,0,0.1), inset 0 -1px rgba(0,0,0,0.15)
    &:active
      box-shadow inset 0 0 5em rgba(0,0,0,0.2), inset 0 1px rgba(0,0,0,0.2)
    &.theme
      background-color: THEME
    &.success
      background-color: SUCCESS
    &.alert
      background-color: ALERT

  &.transparent
    background: none !important

  &[disabled=disabled], &:disabled
    background-color: darken(DISABLED, 5%)
    color: darken(DISABLED, 30%) !important
    border-radius BORDER-RADIUS
    cursor: cursor

  & .icon
    opacity: 0.5
